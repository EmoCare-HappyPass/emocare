{
  "name": "emocare",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/emocare",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "biomejs.biome-vscode",
        "bradlc.vscode-tailwindcss",
        "rickaym.manim-sideview",
        "mhutchie.git-graph",
        "github.copilot",
        "github.copilot-chat",
        "anthropic.claude-code"
      ]
    }
  },
  "forwardPorts": [3001, 8080,8000, 5433],
  "portsAttributes": {
    "8000": {
      "label": "Daphne / ASGI app",
      "onAutoForward": "openBrowser" // or "notify"
    }
  },
  "remoteUser": "root",
  "postCreateCommand": ".devcontainer/setupo.sh"

}
